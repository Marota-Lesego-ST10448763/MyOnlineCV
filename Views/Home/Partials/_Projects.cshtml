@model MyOnlineCV.Models.CV

<h2 class="h4 mb-4">Projects</h2>

@foreach (var project in Model.Projects)
{
    <div class="project-block">
        <div class="d-flex justify-content-between align-items-start gap-2">
            <div>
                <h3 class="h5 mb-1">@project.Name</h3>
                <div class="text-muted small">@project.TechStack</div>
            </div>

            <a class="icon-link" href="@project.RepoUrl" target="_blank" rel="noopener" aria-label="GitHub repository">
                <i class="bi bi-github"></i>
            </a>
        </div>

        <p class="mt-3 mb-0">@project.Description</p>

        @if (!string.IsNullOrWhiteSpace(project.DemoEmbedUrl))
        {
            <div class="ratio ratio-16x9 mt-3">
                <iframe src="@project.DemoEmbedUrl" title="Demo video for @project.Name" allowfullscreen></iframe>
            </div>
        }
    </div>
}